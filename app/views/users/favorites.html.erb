<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        (地域：<%= @user.location %>)
      </h1>
    </section>
    
    <%# following, follower のリンク%>
    <div class="stats">
      <a href="<%= followings_user_path(@user) %>">
        <strong id="following" class="stat">
          <%= @user.following_users.count %>
        </strong>
        followings
      </a>
      <a href="<%= followers_user_path(@user) %>">
        <strong id="followers" class="stat">
          <%= @user.follower_users.count %>
        </strong>
        followers
      </a>
      <a href="<%= favorites_user_path(@user) %>">
        <strong id="followers" class="stat">
          <%= @user.favorites.count %>
        </strong>
        favorites
      </a>
    </div>
    
  </aside>
  <div class="col-md-8">
    <% if @user.favorites.any? %>
      <h3>Favorites (<%= @user.favorites.count %>)</h3>
      <ol class="microposts"><!-- class流用 -->
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
